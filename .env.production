# 生产环境变量配置
# 复制此文件为 .env 并填入真实值

# Django 设置
SECRET_KEY=your-super-secret-production-key-here-change-this
DEBUG=False
DJANGO_SETTINGS_MODULE=config.production_settings

# 数据库设置
DB_NAME=plant_q_db
DB_USER=plant_q_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Redis 设置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password-if-any

# API 密钥
DEEPSEEK_API_URL=https://api.deepseek.com/chat/completions
DEEPSEEK_API_KEY=your-actual-deepseek-api-key
BAIDU_API_KEY=your-actual-baidu-api-key
BAIDU_SECRET_KEY=your-actual-baidu-secret-key

# 邮件设置
EMAIL_HOST=smtp.qq.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@qq.com
EMAIL_HOST_PASSWORD=your-email-app-password

# 域名设置
DOMAIN_NAME=your-domain.com
SERVER_IP=your-server-ip
